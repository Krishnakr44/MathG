{
  "id": "graphs-linear",
  "name": "Linear Graphs (y = mx + c)",
  "domain": "graphs",
  "expressions": ["2*x + 1", "-x + 3"],
  "parameters": [
    {
      "id": "m",
      "label": "Slope (m)",
      "type": "slider",
      "defaultValue": 2,
      "min": -5,
      "max": 5,
      "step": 0.5
    },
    {
      "id": "c",
      "label": "Intercept (c)",
      "type": "slider",
      "defaultValue": 1,
      "min": -5,
      "max": 5,
      "step": 0.5
    }
  ],
  "bounds": {
    "xMin": -10,
    "xMax": 10,
    "yMin": -10,
    "yMax": 10
  },
  "mistakeIds": ["mistake-sign-slope", "mistake-intercept-zero"]
}
